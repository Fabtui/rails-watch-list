<div class="header">
  <div class="movie-index-header">
    <h1>Movies</h1>
  </div>
  <div class="header-button">
    <button type="button" class="btn btn-primary header-btn"><%= link_to new_movie_path do %>
      <i class="fas fa-plus"></i>
    <% end %>
    </button>
    <button type="button" class="btn btn-danger header-btn" id="edit-button"><%= link_to "#" do %>
      <i class="fas fa-trash"></i>
    <% end %>
    </button>
  </div>
</div>

<div class="container">
  <div class="search-container">
    <div class="search-input">
    <%= form_tag movies_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a movie"
      %>
    </div>
    <div class="search-button">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>

<% comment do %>
<div class="movies-index-container">
  <% @movies.each do |movie| %>
    <%= render 'shared/movie_card', movie: movie %>
  <% end %>
</div>
<% comment end %>

  <div id="root"></div>
