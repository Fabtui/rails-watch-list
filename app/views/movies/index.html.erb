<h1>Movies</h1>
  <button type="button" class="btn btn-primary"><%= link_to 'Add a new movie', new_movie_path %></button>
  <button type="button" class="btn btn-danger" id="edit-button"><%= link_to 'Remove a movie', "#" %></button>

<div class="container">
  <div class="search-container">
    <div class="search-input">
    <%= form_tag movies_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a movie"
      %>
    </div>
    <div class="search-button">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row align-items-start">
<% @movies.each do |movie| %>
<div class="col">
<div class="card m-2" style="width: 18rem;" m-4>
  <div class="movie-body">
  <div class="movie-img">  <%= image_tag movie.poster_url , alt: "Poster" %></div>
  <div class="movie-info">
    <h5 class="card-title"><%= link_to movie.title, movie_path(movie) %></h5>
    <h6><%= movie.year %></h6>
    <h6><%= movie.genre %></h6>
    <div class="movie-delete-button hidden" id="destroy-button"><%= link_to "Remove",
            movie_path(movie),
            class: "btn btn-danger",
            method: :delete,
            data: { confirm: "Are you sure?" } %>
            </div>
            </div>
  </div>
</div>
    </div>
<% end %>
