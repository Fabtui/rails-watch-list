<h1 id="title"><%= @list.name %></h1>

<div class="button-container">
  <button type="button" class="btn btn-primary"><%= link_to 'Edit the List', edit_list_bookmark_path(@list) %></button>
  <button type="button" class="btn btn-primary"><%= link_to 'Add a movie', new_list_bookmark_path(@list) %></button>
  <button type="button" class="btn btn-danger"><%= link_to "Remove this list",
                    list_path(@list),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></button>
</div>

<div class="movies-container">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="movie-container">
    <div class="card-movie">
      <%= image_tag bookmark.movie.poster_url , alt: "Poster" %>
      <div class="card-movie-infos">
        <div>
          <h2><%=link_to bookmark.movie.title, movie_path(bookmark.movie.id) %></h2>
          <p><%=bookmark.movie.overview %></p>
          <h3 id="comment" ><i class="fas fa-comment-dots"></i><%=bookmark.comment %></h3>
        </div>
        <div class="movie-rating">
          <% (bookmark.movie.rating.to_i).times do %>
          <div class="star">
            <h2><i class="fas fa-star"></i></h2>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
