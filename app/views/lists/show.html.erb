<h1 id="title"><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark| %>
<div class="movies-container">
<div class="card-trip">
  <%= image_tag bookmark.movie.poster_url , alt: "Poster" %>
  <div class="card-trip-infos">
    <div>
      <h2><%=bookmark.movie.title %></h2>
      <p><%=bookmark.movie.overview %></p>
      <h3><i class="fas fa-comment-dots"></i><%=bookmark.comment %></h3>
    </div>
    <h2 class="card-trip-pricing"><%=bookmark.movie.rating%><i class="fas fa-star"></i></h2>
  </div>
</div>
</div>
</div>
</div>

<% end %>
 <%= link_to 'Edit the List', edit_list_path %>
 <%= link_to 'Add a movie', new_list_bookmark_path(@list) %>


 <%= link_to "Remove this list",
                  list_path(@list),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
